generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../server/database/db.sqlite"
}

model Client {
  id      Int       @id @default(autoincrement())
  name    String
  email   String
  phone   String
  Command Command[]
  Invoice Invoice[]
}

model Product {
  id            Int             @id @default(autoincrement())
  name          String
  price         Float
  stock         Int
  StockMovement StockMovement[]
  CommandItem   CommandItem[]
}

model StockMovement {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  model     String
  date      DateTime @default(now())
  productId Int
}

model Command {
  id       Int           @id @default(autoincrement())
  client   Client        @relation(fields: [clientId], references: [id])
  items    CommandItem[]
  date     DateTime      @default(now())
  clientId Int
  Invoice  Invoice[]
}

model CommandItem {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  Command   Command? @relation(fields: [commandId], references: [id])
  commandId Int?
  productId Int
}

model Invoice {
  id        Int      @id @default(autoincrement())
  client    Client   @relation(fields: [clientId], references: [id])
  command   Command  @relation(fields: [commandId], references: [id])
  total     Float
  date      DateTime @default(now())
  clientId  Int
  commandId Int
}
